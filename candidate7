#include<iostream>
#include<fstream>
#include<string>
using namespace std;

struct Candidate {
	string name;
	int num;
};

void readCandidate(Candidate x[]) {
	ifstream fin;
	fin.open("input.txt");
	if (!fin) {
		cout << "unable to open the file input.txt ";
		exit(1);
	}
	else {
		for (int i = 0; i < 3; i++) {
			fin >> x[i].name;
			fin >> x[i].num;
			cout << x[i].name << endl;
			cout << x[i].num << endl;
		}
		fin.close();
	}

}

void printCandidate(Candidate x[]) {
	ofstream fout;
	fout.open("output.txt");
	if (!fout) {
		cout << "unable to write to the  file output.text";
		exit(1);
	}
	else {
		for (int i = 0; i < 3; i++) {
			fout << " candidate name: " << x[i].name << endl;
			fout << " candidate number:" << x[i].num << endl;
		}
		fout.close();
	}

}

int main() {
	Candidate candidates[3];
	Candidate *groupOfCandidates = candidates;

	readCandidate(groupOfCandidates);
	printCandidate(groupOfCandidates);

	system("pause");
	return 0;
}
