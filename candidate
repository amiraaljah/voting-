#include <iostream>
#include<string>
using namespace std;

  struct Candidate{
  
  int age;
  string name;

  void readCandidate(){
     cout <<"Enter  candidate name : " << endl;
     cin >> name;
     cout << "Enter  candidate age: " << endl;
     cin >> age ;
  }
  
   void writeCandidate(){
     cout << "\n name:" << name <<"\n age:"<< age << endl;
  }
};

int main()
{
   Candidate candidate;
   candidate.readCandidate();
   candidate.writeCandidate();
   return 0;
}
