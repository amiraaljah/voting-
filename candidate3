#include <iostream>
using namespace std;

struct Candidate{
  int age;
  string name;
  void readCandidate(Candidate *ptr);
  void writeCandidate(Candidate *ptr);
};


void readCandidate(Candidate *ptr){
  cout << "Enter the candidate name: " << endl;
  cin >>  (* ptr).name;
  cout << "Enter the candidate age: " << endl;
  cin >>  (* ptr).age;
}


void writeCandidate(Candidate *ptr ){
 cout << "\n name:" << (* ptr).name << "\n age:" << (* ptr).age <<endl;
}


int main (){
  Candidate candidate;
  Candidate *ptr;
  ptr = &candidate;
  readCandidate(&candidate );
  writeCandidate(&candidate);
}
