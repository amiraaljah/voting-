#include <iostream>
#include <string>
using namespace std;

struct Candidate{
  int age;
  string name;
};

void readCandidate(Candidate *x){
  cout << "Enter the candidate name: \n" 
  cin >>  x->name;
  cout << "Enter the candidate age: \n " 
  cin >>  x->age;
}

void printCandidate(Candidate *x){
 cout << "\n name:" <<  x->name << "\n age:" << x->age <<endl;
}

int main (){
  Candidate candidate;
  Candidate *ptr= &candidate;
  readCandidate(ptr);
  printCandidate(ptr);
}
